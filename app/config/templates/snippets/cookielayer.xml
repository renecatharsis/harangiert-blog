<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>cookielayer</key>

    <meta>
        <title lang="en">Cookie Layer</title>
        <title lang="de">Cookie Layer</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>

            <tag name="sulu.node.name"/>
        </property>

        <property name="cookielayer_text" type="text_editor">
            <meta>
                <title lang="en">Text</title>
                <title lang="de">Text</title>
            </meta>
        </property>

        <property name="cookielayer_button_accept" type="text_line">
            <meta>
                <title lang="en">Button Text (accept)</title>
                <title lang="de">Button Text (zustimmen)</title>
            </meta>
        </property>

        <property name="cookielayer_button_decline" type="text_line">
            <meta>
                <title lang="en">Button Text (decline)</title>
                <title lang="de">Button Text (ablehnen)</title>
            </meta>
        </property>
    </properties>
</template>
