<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.1.xsd">
    <block name="blocks">
        <types>
            <type name="gallery">
                <meta>
                    <title lang="en">Image gallery</title>
                    <title lang="de">Bilder Gallerie</title>
                </meta>
                <properties>
                    <property name="images" type="media_selection">
                        <meta>
                            <title lang="en">Gallery Images</title>
                            <title lang="de">Gallerie Bilder</title>
                        </meta>
                        <params>
                            <param name="types" value="image"/>
                        </params>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
