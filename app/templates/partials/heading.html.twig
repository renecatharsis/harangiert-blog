{% if content.heading_background is defined and content.heading_background|length > 0 %}
    {% set image = (content.heading_background|first) %}
    {% set defaultImage = image.thumbnails["1920x1080"] %}
{% endif %}

<header class="masthead" {% if defaultImage is defined %}style="height: 100vh; background-image: linear-gradient(to top, #1c1c21, rgba(255,0,0,0)), url('{{ asset(defaultImage) }}')"{% endif %}>
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="{% if 'blogpost' == template %}post-heading{% else %}site-heading{% endif %}">
                    <h1>{{ content.heading_title|default('') }}</h1>
                    <span class="subheading">{{ content.heading_sub|default('') }}</span>
                    {% if 'blogpost' == template %}
                        <span class="subheading">
                            {% set authorObject = sulu_resolve_user(author) %}
                            Ver√∂ffentlicht
                            von {{ authorObject.contact.firstName|default('') }}
                            am {{ created|date('d.m.Y') }}
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>